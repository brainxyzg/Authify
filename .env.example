# 全局配置
PORT=3000

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_NAME=authify_db
DB_SYNCHRONIZE=true

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT 配置
JWT_SECRET=your-secret-key
JWT_ACCESS_TOKEN_EXPIRY=3600  # 1小时
JWT_REFRESH_TOKEN_EXPIRY=604800  # 7天

# 邮件配置
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM="Authify <no-reply@example.com>"

# 中间件配置
CORS_ALLOWED_ORIGINS=https://example.com,https://app.example.com
RATE_LIMIT_TTL=60  # 60秒
RATE_LIMIT_MAX=10  # 10次
CACHE_DEFAULT_TTL=3600  # 1小时

# 日志配置
LOG_LEVEL=info